<?xml version="1.0"?>

<launch>
    <!-- 启动roscore -->
    <master auto="start"/>

    <!-- TF setting 坐标变换-->
    <include file="$(find art_racecar)/launch/includes/art_car_tf.launch.xml" />

    <!-- SENSOR DEVICE -->
    <!-- second startup ls01g lidar激光雷达 -->
    <include file="$(find art_racecar)/launch/ls01g_lidar.launch"/>
    <!-- IMU 陀螺仪-->
    <include file="$(find art_imu)/launch/imu.launch" />
    <!-- Car 底盘驱动-->
    <node pkg="art_driver" type="art_driver_node" name="art_driver_node" output="screen"/>

	
      <!-- Rviz -->
    <!--node pkg="rviz" type="rviz" name="rviz" args="-d $(find art_racecar)/launch/rviz/gmapping.rviz" if="$(arg use_rviz)"/-->

        <arg name="use_rviz" default="false" />

    <!-- for amcl 初始坐标-->    
    <arg name="init_x" default="0.0" />
    <arg name="init_y" default="0.0" />
    <arg name="init_a" default="0.0" />

    <!-- Map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find art_racecar)/map/mymap.yaml"/>

   

    <!-- ODOMETRY -->
    <!--rf2o_Laser_Odometry 激光雷达信息估计小车运动状态  激光里程记  -->
    <include file="$(find art_racecar)/launch/includes/rf2o.launch.xml" />
    <!-- Robot_Localization 使用imu和激光雷达的数据共同完成定位-->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se" clear_params="true">
        <rosparam command="load" file="$(find art_racecar)/param/ekf_params.yaml" />
    </node>

    <!--<param name="/use_sim_time" value="true"/>-->

    <!-- Navstack -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base">

        <!--  teb_local_planner  -->
        <rosparam file="$(find art_racecar)/param/teb_param_lino/base_local_planner_ackermann_params.yaml" command="load"/>
        <rosparam file="$(find art_racecar)/param/teb_param_lino/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find art_racecar)/param/teb_param_lino/global_costmap_params.yaml" command="load"/> 
        <rosparam file="$(find art_racecar)/param/teb_param_lino/costmap_common_params.yaml" command="load" ns="global_costmap" />
  	 	<rosparam file="$(find art_racecar)/param/teb_param_lino/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <!--<rosparam file="$(find art_racecar)/param/teb_param_lino/costmsap_conversion_params.yaml" command="load"/> -->
        <!-- global_planner -->
        <param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="1.0" />
		<param name="planner_patience" value="5.0" />
        <!-- local_planner -->
		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" />
        <!-- move_base params -->
        <rosparam file="$(find art_racecar)/param/base_global_planner_params.yaml" command="load"/>
        <!--<rosparam file="$(find art_racecar)/param/move_base_params.yaml" command="load"/>-->
        <rosparam file="$(find art_racecar)/param/teb_param_lino/move_base_params.yaml" command="load"/>
        <param name="clearing_rotation_allowed" value="false" />
        <remap from="/odom" to="/odometry/filtered"/>
    </node>

    <!-- Localization -->
    <node pkg="amcl" type="amcl" name="amcl" output="screen">
		<rosparam file="$(find art_racecar)/param/teb_param_ori/amcl_params.yaml" command="load" />

	    <param name="initial_pose_x"            value="2"/>
		<param name="initial_pose_y"            value="2"/>
		<param name="initial_pose_a"            value="0"/>
	</node>

    <!-- L1 controller -->  
    <!--<node pkg="art_racecar" type="L1_controller_v2" respawn="false" name="L1_controller_v2" output="screen">       
        <param name="baseSpeed" value="1680"/>         
        <param name="MAX_SLOW_DOWN" value="40"/>
        <param name="TRAVERSAL_POINT" value="100"/>
        <param name="baseAngle" value="90.0"/> 
        <param name="AngleGain" value="-6"/> 
        <param name="GasGain" value="3.0"/>
        <remap from="/move_base_node/NavfnROS/plan" to="/move_base/NavfnROS/plan" /> 
    </node>-->

    <!-- Rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find art_racecar)/rviz/amcl.rviz" if="$(arg use_rviz)" />


</launch>